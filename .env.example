# ============================================================
# VulnPilot AI - Environment Configuration
# Copy this file to .env and fill in your values
# The /setup page has a Quick Paste tab that generates this
# ============================================================

# --- AI Provider (pick one) ---
LLM_PROVIDER=ollama                  # ollama | anthropic | openai
ANTHROPIC_API_KEY=                   # sk-ant-... (if using Claude)
OPENAI_API_KEY=                      # sk-... (if using GPT-4o)
OLLAMA_URL=http://ollama:11434       # auto in Docker

# --- Challenger (optional, for Lock 2 debate) ---
CHALLENGER_PROVIDER=                 # Set to second provider for cross-model debate

# --- Vulnerability Scanners (comma-separated) ---
SCANNER_PROVIDERS=nessus_file        # tenable,qualys,rapid7,openvas,wazuh,nessus_file,cloud

# Tenable.io
TENABLE_ACCESS_KEY=
TENABLE_SECRET_KEY=

# Qualys VMDR
QUALYS_API_URL=https://qualysapi.qualys.com
QUALYS_USERNAME=
QUALYS_PASSWORD=

# Rapid7 InsightVM
RAPID7_API_KEY=
RAPID7_REGION=us

# OpenVAS
OPENVAS_HOST=openvas
OPENVAS_PORT=9390
OPENVAS_USERNAME=admin
OPENVAS_PASSWORD=admin

# Wazuh
WAZUH_API_URL=https://localhost:55000
WAZUH_INDEXER_URL=https://localhost:9200
WAZUH_USERNAME=wazuh-wui
WAZUH_PASSWORD=wazuh

# --- Cloud Compliance ---
CLOUD_DEMO_MODE=true                 # true = sample data, false = live scan
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_PROWLER_ROLE_ARN=                # optional cross-account role

AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

GCP_PROJECT_ID=

# --- Ticket System (pick one) ---
TICKET_PROVIDER=console              # console | servicenow | jira | pagerduty

# ServiceNow
SERVICENOW_INSTANCE=
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=

# Jira Cloud
JIRA_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=SEC

# PagerDuty
PAGERDUTY_ROUTING_KEY=

# --- Threat Intelligence ---
ABUSECH_AUTH_KEY=                     # required since June 2025
NVD_API_KEY=                         # optional, increases rate limit
OTX_API_KEY=
GREYNOISE_API_KEY=
SHODAN_API_KEY=

# --- Notifications (optional) ---
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
WEBHOOK_URL=

# --- Authentication ---
AUTH_ENABLED=false                    # true for production
AUTH_SECRET_KEY=change-me-in-production
AUTH_ADMIN_PASSWORD=admin
AUTH_TOKEN_EXPIRY_HOURS=8

# --- Database ---
DATABASE_URL=postgresql+asyncpg://vulnpilot:vulnpilot@postgres:5432/vulnpilot
REDIS_URL=redis://redis:6379/0

# --- Logging ---
LOG_LEVEL=INFO
